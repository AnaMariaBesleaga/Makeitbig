<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".addTheme.AddNewThemeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:id="@+id/etThemeName"
            android:hint="@string/new_theme_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:id="@+id/etTextColour"
            android:hint="@string/new_theme_color_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:id="@+id/etNewThemeUid"
            android:hint="@string/new_theme_id_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnAddNewTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/btn_add_new_theme"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:bootstrapText="Add"
            app:roundedCorners="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/add_new_theme_text"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnAddStorageUrl"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/btn_add_new_theme"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:bootstrapText="Add storage URL"
            app:roundedCorners="true" />

    </LinearLayout>


</LinearLayout>